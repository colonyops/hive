{
  "description": "Hive session automation hooks",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-inbox.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
